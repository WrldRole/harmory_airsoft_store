/* src/App.css */
.App {
  text-align: center;
  font-family: Arial, sans-serif;
  margin: 20px;
}

.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.product-item {
  border: 1px solid #ddd;
  padding: 15px;
  margin: 10px;
  width: 250px;
  text-align: left;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.product-item h2 {
  font-size: 1.5em;
  margin-bottom: 10px;
}

.product-item p {
  font-size: 1em;
}
